HISTFILESIZE=30000
PATH=/usr/local/bin:$PATH
PATH=/usr/local/sbin:$PATH
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules
export EDITOR="mvim -v"


# Add my key to agent for forwarding unless it's already there
ssh-add -l | grep 'The agent has no identities.' > /dev/null 2>&1
if [[ "$?" -eq "0" ]]; then
  ssh-add
fi

# TODO: Make a credentials folder and put all
# files like this in there.
if [ -f ~/.aws/credentials ]; then
   source ~/.aws/credentials
fi

# Prompt
PS_SYMBOL='⌁'
source ~/.bash/bundles/bash-powerline/bash-powerline.sh

# Bash alias
alias ba='vim $HOME/.bash_aliases && source $HOME/.bash_aliases'
source $HOME/.bash_aliases

chruby='/usr/local/opt/chruby/share/chruby/chruby.sh'
if [ -a "$chruby" ]; then
  source "$chruby"
fi

# Bash completion
brew > /dev/null 2>&1
if [[ "$?" -eq "0" ]]; then
  if [ -f $(brew --prefix)/etc/bash_completion ]; then
    . $(brew --prefix)/etc/bash_completion
  fi
fi

# added by travis gem
[ -f $HOME/.travis/travis.sh ] && source $HOME/.travis/travis.sh
