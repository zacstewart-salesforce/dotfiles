HISTFILESIZE=30000
PATH=/usr/local/bin:$PATH
PATH=/usr/local/sbin:$PATH
PATH=/usr/local/share/npm/bin:$PATH
export NODE_PATH=$NODE_PATH:/usr/local/lib/node_modules

export EDITOR='vim'

# Add my key to agent for forwarding unless it's already there
ssh-add -l | grep 'The agent has no identities.' > /dev/null 2>&1
if [[ "$?" -eq "0" ]]; then
  ssh-add
fi

# Prompt
if [[ $- == *i* ]]
then
  PS_SYMBOL='‚åÅ'
  source ~/.bash/bundles/bash-powerline/bash-powerline.sh

  BASE16_SHELL=$HOME/.bash/bundles/base16-shell/base16-tomorrow.dark.sh
  [[ -s $BASE16_SHELL ]] && source $BASE16_SHELL
fi

# Bash alias
alias ba='$EDITOR $HOME/.bash_aliases && source $HOME/.bash_aliases'
source $HOME/.bash_aliases

export GREP_OPTIONS='--color=auto --exclude=*.pyc --exclude-dir=.git'

# Machine-specific bashrc
[ -f $HOME/.bashrc.local ] && source $HOME/.bashrc.local
